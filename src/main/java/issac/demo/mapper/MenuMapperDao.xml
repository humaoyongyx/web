<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="issac.demo.mapper.MenuMapperDao" >
  <resultMap id="BaseResultMap" type="issac.demo.model.MenuBean" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="pid" property="pid" jdbcType="INTEGER" />
    <result column="text" property="text" jdbcType="VARCHAR" />
    <result column="icon" property="icon" jdbcType="VARCHAR" />
    <result column="url" property="url" jdbcType="VARCHAR" />
    <result column="orderNo" property="orderNo" jdbcType="INTEGER" />
    <result column="resourceId" property="resourceId" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, pid, text, icon, url, orderNo, resourceId
  </sql>
  <select id="getAll" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from menu
  </select>
  
    <select id="getAllMenus" resultMap="BaseResultMap" parameterType="issac.demo.bo.params.MenuParams" >
    select 
    <include refid="Base_Column_List" />
    from menu
    where 1=1
    <if test="text != null" >
        and text like  CONCAT('%',#{text,jdbcType=VARCHAR},'%' )
    </if>
  </select>
  
    <insert id="insert" parameterType="issac.demo.model.Menu"  useGeneratedKeys="true" keyProperty="id">
    insert into menu (id, pid, text, 
      icon, url, orderNo, 
      resourceId)
    values (#{id,jdbcType=INTEGER}, #{pid,jdbcType=INTEGER}, #{text,jdbcType=VARCHAR}, 
      #{icon,jdbcType=VARCHAR}, #{url,jdbcType=VARCHAR}, #{orderNo,jdbcType=INTEGER}, 
      #{resourceId,jdbcType=INTEGER})
  </insert>
  
   <insert id="insertSelective" parameterType="issac.demo.model.Menu" >
    insert into menu
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="pid != null" >
        pid,
      </if>
      <if test="text != null" >
        text,
      </if>
      <if test="icon != null" >
        icon,
      </if>
      <if test="url != null" >
        url,
      </if>
      <if test="orderNo != null" >
        orderNo,
      </if>
      <if test="resourceId != null" >
        resourceId,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=INTEGER},
      </if>
      <if test="pid != null" >
        #{pid,jdbcType=INTEGER},
      </if>
      <if test="text != null" >
        #{text,jdbcType=VARCHAR},
      </if>
      <if test="icon != null" >
        #{icon,jdbcType=VARCHAR},
      </if>
      <if test="url != null" >
        #{url,jdbcType=VARCHAR},
      </if>
      <if test="orderNo != null" >
        #{orderNo,jdbcType=INTEGER},
      </if>
      <if test="resourceId != null" >
        #{resourceId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="issac.demo.model.Menu" >
    update menu
    <set >
      <if test="pid != null" >
        pid = #{pid,jdbcType=INTEGER},
      </if>
      <if test="text != null" >
        text = #{text,jdbcType=VARCHAR},
      </if>
      <if test="icon != null" >
        icon = #{icon,jdbcType=VARCHAR},
      </if>
      <if test="url != null" >
        url = #{url,jdbcType=VARCHAR},
      </if>
      <if test="orderNo != null" >
        orderNo = #{orderNo,jdbcType=INTEGER},
      </if>
      <if test="resourceId != null" >
        resourceId = #{resourceId,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
     <delete id="deleteAll" parameterType="java.util.List" >
       delete from menu  where id  in
      <foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
           #{item,jdbcType=INTEGER}
      </foreach>
  </delete>
</mapper>