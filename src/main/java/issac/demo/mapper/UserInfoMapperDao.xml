<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="issac.demo.mapper.UserInfoMapperDao">

<resultMap id="BaseResultMap" type="issac.demo.model.UserInfo" >
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="salary" property="salary" jdbcType="DOUBLE" />
		<result column="sex" property="sex" jdbcType="VARCHAR" />
		<result column="descn" property="descn" jdbcType="VARCHAR" />
		<result column="photo" property="photo" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, name, salary, sex, descn, photo
	</sql>
	
	<select id="selectAll" resultMap="issac.demo.mapper.UserInfoMapper.BaseResultMap">
		select
		<include refid="issac.demo.mapper.UserInfoMapper.Base_Column_List" />
		from user_info
	</select>

	<select id="getList" resultMap="issac.demo.mapper.UserInfoMapper.BaseResultMap">
		select
		<include refid="issac.demo.mapper.UserInfoMapper.Base_Column_List" />
		from user_info
		where 1=1
		<if test="name != null">
			and name like CONCAT('%',#{name,jdbcType=VARCHAR},'%' )
		</if>
	</select>

	<select id="getPageList" resultType="issac.demo.model.UserInfo" parameterType="issac.demo.bo.params.UserInfoParams">
		select
		<include refid="issac.demo.mapper.UserInfoMapper.Base_Column_List" />
		,
		CONCAT('row',id) dTRowId
		from user_info
		where 1=1
		<if test="name != null">
			and name like CONCAT('%',#{name,jdbcType=VARCHAR},'%' )
		</if>
		order by id desc
		limit #{start,jdbcType=INTEGER},#{length,jdbcType=INTEGER}
	</select>

	<select id="getPageTotal" resultType="java.lang.Integer" parameterType="issac.demo.bo.params.UserInfoParams">
		select
		count(id)
		from user_info
		where 1=1
		<if test="name != null">
			and name like CONCAT('%',#{name,jdbcType=VARCHAR},'%' )
		</if>
	</select>


</mapper>